import sys

Import('env')

src = [
    "logging.cc",
    "openedfilemgr.cc",
    "ori_fuse.cc",
    "ori_priv.cc",
    "ori_cmdoutput.cc",
    "parse_opt.cc",
    "repo_cmd.cc",
]

libs = [
        "crypto",
        ]

env.ParseConfig('pkg-config --libs --cflags fuse')
if sys.platform != "darwin":
    libs += ['rt', 'pthread']

env.Append(LIBS = libs, CPPPATH = [ "$CPPPATH", "#include", "#" ])

env.Program("mount_ori", src)
