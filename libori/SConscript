import os

Import('env')

src = [
    "chunker.cc",
    "commit.cc",
    "debug.cc",
    "httpclient.cc",
    "httprepo.cc",
    "index.cc",
    "largeblob.cc",
    "localobject.cc",
    "lrucache.cc",
    "monitor.cc",
    "object.cc",
    "repo.cc",
    "scan.cc",
    "snapshotindex.cc",
    "tree.cc",
    "util.cc",
    "stream.cc",
    "localrepo.cc",
    "sshclient.cc",
    "sshrepo.cc",
    "treediff.cc",
]

if os.name == 'posix':
    src += ['mutex_posix.cc', 'rwlock_posix.cc', 'thread_posix.cc']

if env["WITH_MDNS"] == "1":
    src.append("zeroconf.cc")

env.StaticLibrary("ori", src, CPPPATH = [ "#libori", "$CPPPATH" ])

