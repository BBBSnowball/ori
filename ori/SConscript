import sys

Import('env')

ori_env = env.Clone()

src = [
    "cmd_addkey.cc",
    "cmd_branch.cc",
    "cmd_branches.cc",
    "cmd_catobj.cc",
    "cmd_checkout.cc",
    "cmd_commit.cc",
    "cmd_diff.cc",
    "cmd_dumpindex.cc",
    "cmd_dumpmeta.cc",
    "cmd_dumpobj.cc",
    "cmd_dumppackfile.cc",
    "cmd_dumprefs.cc",
    "cmd_filelog.cc",
    "cmd_findheads.cc",
    "cmd_fsck.cc",
    "cmd_gc.cc",
    "cmd_graft.cc",
    "cmd_init.cc",
    "cmd_list.cc",
    "cmd_listkeys.cc",
    "cmd_listobj.cc",
    "cmd_log.cc",
    "cmd_merge.cc",
    "cmd_newfs.cc",
    "cmd_pull.cc",
    "cmd_purgeobj.cc",
    "cmd_purgesnapshot.cc",
    "cmd_rebuildindex.cc",
    "cmd_rebuildrefs.cc",
    "cmd_refcount.cc",
    "cmd_remote.cc",
    "cmd_removefs.cc",
    "cmd_removekey.cc",
    "cmd_replicate.cc",
    "cmd_setkey.cc",
    "cmd_show.cc",
    "cmd_snapshot.cc",
    "cmd_snapshots.cc",
    "cmd_stats.cc",
    "cmd_status.cc",
    "cmd_stripmetadata.cc",
    "cmd_tip.cc",
    "cmd_treediff.cc",
    "cmd_verify.cc",
    "fuse_cmd.cc",
    "main.cc",
    "server.cc",
]

libs = [
	"crypto",
	"stdc++",
	"event_core",
	"event_extra",
]

if sys.platform != "darwin":
    libs += ['rt']
    if env["WITH_MDNS"] == "1":
        libs += ['dns_sd']

if sys.platform == "linux2":
    libs += ['uuid', 'resolv']

ori_env.Append(LIBS = libs)

ori_env.Program("ori", src)

