import sys

Import('env')

src = [
    "main.cc",
    "repo_cmd.cc",
    "server.cc",
]

libs = [
        "crypto",
        "stdc++",
        "lzma",
        "ori",
       ]

if sys.platform == "darwin":
    # TODO
    libs += []
else:
    libs += ['rt']

env.Program("ori", src,
            LIBPATH = [ "#build/libori", "$LIBPATH" ],
            LIBS = libs,
            CPPPATH = [ "#libori", "$CPPPATH", "#include", "#" ])

