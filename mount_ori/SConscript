import sys

Import('env')

src = [
    "ori_fuse.cc",
    "parse_opt.cc",
    "ori_priv.cc",
    "logging.cc",
    "ori_cmdoutput.cc",
    "repo_cmd.cc",
]

libs = [
        "crypto",
        "lzma",
        "ori",
	"skein",
        ]

env.ParseConfig('pkg-config --libs --cflags fuse')
if sys.platform != "darwin":
    libs += ['rt']
    
env.Append(
        LIBS = libs,
        LIBPATH = [ "#build/libori", "#build/libskein", "$LIBPATH" ],
        CPPPATH = [ "#libori", "#libskein", "$CPPPATH", "#include", "#" ]
        )

env.Program("mount_ori", src)
